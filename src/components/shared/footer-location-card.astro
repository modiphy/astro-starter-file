---
import PageSectionFieldsModel from '@/models/page-section-fields-model'

const { item } = Astro.props
const fieldsModel = new PageSectionFieldsModel(item.fields)
---

{
  fieldsModel && (
    <a
      target="_blank"
      class="rounded-md bg-secondary-800 p-4 transition duration-300 ease-in-out hover:bg-secondary-700 md:p-5"
      href={fieldsModel.googleMapUrl}
    >
      <p class="text-left text-lg font-medium uppercase tracking-wide text-primary-400 md:text-xl">
        {item.name}
      </p>
      <div class="mt-2 space-y-2 text-secondary-100 md:mt-3">
        <div class="flex">
          <svg
            class="mt-0.5 h-5 w-5 text-secondary-400"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"
            />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
            />
          </svg>
          {fieldsModel.address && (
            <div class="ml-2 space-y-1 text-left">
              <p>
                {fieldsModel.address.address}
                <br />
                {fieldsModel.address.city}, {fieldsModel.address.state} {fieldsModel.address.zip}
              </p>
            </div>
          )}
        </div>
        {fieldsModel.telephone && (
          <div class="flex">
            <svg
              class="mt-0.5 h-5 w-5 text-secondary-400"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
              />
            </svg>
            <div class="ml-2 space-y-1">
              <p>{fieldsModel.telephone}</p>
            </div>
          </div>
        )}
      </div>
    </a>
  )
}
