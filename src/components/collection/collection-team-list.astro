---
import { Img } from '@/shared'
import ItemModel from '@/models/item-model'

const { items } = Astro.props
---

{
  items.length > 0 && (
    <ul class="mx-auto grid flex-wrap justify-center md:grid-cols-2 lg:flex lg:space-x-14">
      {items?.map((item: any) => {
        const itemModel = new ItemModel(item)

        return (
          <li class="group mt-14 w-full md:w-auto">
            {item.fields.subtitle === 'Paralegal' ? (
              <div>
                {item.fields.image && (
                  <figure class="h-56 w-56 overflow-hidden rounded-full">
                    <Img
                      image={item.fields.image}
                      imageClass="mx-auto object-center object-cover h-full w-full group-hover:scale-110 transition ease-in-out duration-300"
                    />
                  </figure>
                )}
                <h3 class="mt-6 text-base font-semibold leading-7 tracking-tight text-gray-900">
                  {item.name}
                </h3>
                <p class="text-sm leading-6 text-gray-600">{item.fields.subtitle}</p>
              </div>
            ) : (
              <a href={`/about-us/our-team/${itemModel.slug}`}>
                {item.fields.image && (
                  <figure class="h-56 w-56 overflow-hidden rounded-full">
                    <Img
                      image={item.fields.image}
                      imageClass="mx-auto object-center object-cover h-full w-full group-hover:scale-110 transition ease-in-out duration-300"
                    />
                  </figure>
                )}
                <h3 class="mt-6 text-base font-semibold leading-7 tracking-tight text-gray-900">
                  {item.name}
                </h3>
                <p class="text-sm leading-6 text-gray-600">{item.fields.subtitle}</p>
              </a>
            )}
          </li>
        )
      })}
    </ul>
  )
}
