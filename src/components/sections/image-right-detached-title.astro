---
import { ImageRight } from '@/sections'

const { fields, sectionCount = 0 } = Astro.props

const classes = {
  mainDiv: 'mt-6 grid gap-8 lg:grid-cols-2',
  textDiv: 'lg:col-start-1 lg:row-start-1',
  image: {
    mainDiv: '',
    subDiv: 'aspect-w-16 aspect-h-9 relative z-1 overflow-hidden rounded-xl',
    class: 'h-full w-full object-cover object-center shadow-md',
    width: 1000,
    height: 667
  }
}
---

<ImageRight fields={fields} sectionCount={sectionCount} detachedTitle={true} classes={classes} />
