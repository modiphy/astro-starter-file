---
import { ImageRight } from '@/sections'

const { fields, sectionCount = 0 } = Astro.props

const classes = {
  mainDiv: 'relative mt-6 grid lg:grid-cols-2 gap-8 xl:grid-cols-12',
  textDiv: 'xl:col-span-8 mt-4 lg:mt-0',
  image: {
    mainDiv: 'mx-auto xl:col-span-4',
    subDiv: '',
    class: 'relative z-1 object-center shadow-md',
    width: 1500,
    height: 1500
  }
}
---

<ImageRight fields={fields} sectionCount={sectionCount} detachedTitle={true} classes={classes} />
